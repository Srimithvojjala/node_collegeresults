<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.5.0"></script>
<script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@2.0.0"></script>
    <title>Document</title>
</head>

<body>
    <% const myarr=[ 7.53, 6.94, 7.38, 6.43, 6.73, 6.59, 7.9,8.0]; %>
        <h2>hello</h2>
        <% console.log(myarr) %>
            <canvas id="myChart"></canvas>
            <script>
                const ctx = document.getElementById('myChart');
                const myData = JSON.parse('<%- JSON.stringify(myarr) %>');
                new Chart(ctx, {

                    type: 'line',
                    data: {
                        labels: ['1-1', '1-2', '2-1', '2-2', '3-1', '3-2', '4-1', '4-2'],
                        datasets: [{
                            label: 'Sem Wise Graph',
                            data: myData,
                            borderWidth: 3
                        }, {
                            label: 'Sem Wise Graph',
                            data: myData,

                            type: 'bar',
                            backgroundColor: ['rgba(255, 99, 132, 0.2)', 'rgba(54, 162, 235, 0.2)', 'rgba(255, 206, 86, 0.2)', 'rgba(75, 192, 192, 0.2)', 'rgba(153, 102, 255, 0.2)', 'rgba(255, 159, 64, 0.2)', 'rgba(0, 255, 255, 0.2)', 'rgba(0,0,0, 0.2)'],
                            borderColor:['rgba(255, 99, 132, 1)', 'rgba(54, 162, 235, 1)', 'rgba(255, 206, 86, 1)', 'rgba(75, 192, 192, 1)', 'rgba(153, 102, 255, 1)', 'rgba(255, 159, 64, 1)', 'rgba(0, 255, 255, 1)', 'rgba(0,0,0, 1)'],
                            // this dataset is drawn on top
                            borderWidth: 1,
                            barThickness:60,
                             
                            order: 1
                        }
                        ]
                    },
                    options: {
                        plugins: {
        datalabels: {
          anchor: 'center',
          align: 'center',
          font: {
            weight: 'bold'
          },
        //   formatter: (value) => value.toFixed(2) // Format the value
        }
      },
                        scales: {
                            y: {
                                min: 0,
                                max: 10,
                                beginAtZero: false
                            }
                        }
                    }
                });
            </script>
</body>

</html>